<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mysqlitedata.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_search_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnUpdate"
        app:layout_constraintBottom_toTopOf="@+id/btnDelete" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_edit_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintLeft_toRightOf="@+id/btnSearch" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_add_circle_outline_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdate"
        app:layout_constraintLeft_toRightOf="@+id/btnDelete" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_remove_circle_outline_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch" />

</android.support.constraint.ConstraintLayout>
